<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssu.mapper.boardMapper">
    <!-- 01. 게시글 전체 목록 조회 -->
    <select id="listAll" resultType="com.ssu.domain.BoardVO">
        SELECT 
            bno, 
            title, 
            content, 
            writer,
            regdate, 
            viewcnt 
        FROM 
            agora_board
        ORDER BY 
            bno desc, 
            regdate desc
    </select>
    <!-- 02. 게시글 작성 -->
    <insert id="insert">

        INSERT INTO agora_board (
          title, 
          content, 
          writer,
          regdate
        ) VALUES (
          #{title},
          #{content},
          #{writer},
          #{regdate}
        )
        
    </insert>
    <!--03. 게시글 상세보기 조회 -->
    <select id="view" resultType="com.ssu.domain.BoardVO">
        SELECT * FROM agora_board 
        WHERE bno = #{bno}
    </select>
    <!-- 04. 게시글 조회수 증가처리 -->
    <update id="increaseViewcnt">
        UPDATE agora_board SET viewcnt = viewcnt + 1 
        WHERE bno = #{bno}
    </update>
    
    <!-- 05. 게시글 수정처리 -->
    <update id="updateArticle">
        UPDATE agora_board SET
            title = #{title},
            content = #{content},
            writer = #{writer}
        WHERE bno = #{bno}
    </update>
    
    <!-- 06. 게시글 삭제처리 -->
    <delete id="deleteArticle">
        DELETE FROM agora_board
        WHERE bno = #{bno}
    </delete>
</mapper>